doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        title Third Express application
    body
        main
            h1 Third Express application
            form(method='POST' action='/')
                label(for='name') Give your name
                input(name='name')
                br
                input(type='submit')
                input(type='reset')
            img(src='http://localhost:8000/images/honey-badger.jpg' alt='Beautiful view' style='width: 512px')
            table
                thead
                    th First name
                    th Last name
                    th Faculty
                each student in students
                    tr
                        td= student.firstName
                        td= student.lastName
                        td= student.faculty